{
  "compilerOptions": {
    "allowJs": false,
    "declaration": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "dist",
    "preserveConstEnums": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "exclude": [
    "node_modules",
    "internals"
  ],
  "include": ["src/**/*"]
}
